@using Ebay.Infrastructure.ViewModels.Admin.Index

@model DiscountViewDTO

<div class="text-danger" asp-validation-summary=All></div>
<form method="post" asp-controller="Admin" asp-action="CreateDiscount">
        <div class="form-group" hidden>
            <label>ID</label>
            <input class="form-control" asp-for=Id />
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiscountPercent"></label>
            <input asp-for="DiscountPercent" class="form-control" ></input>
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsActive"></label>
            <input asp-for="IsActive"  class="form-check-input"/>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
</form>