@using Ebay.Infrastructure.ViewModels.Admin.Index
@model ProductViewListDTO

@{
}
<br />

<div class="panel panel-default">
    <a class="btn btn-primary" asp-controller="Admin"  asp-action="CreateProduct">Create New Product</a>
</div>
<br />

<table class="table table-sm table-striped table-bordered">
     <thead>
         <tr>
             <th>ID</th>
             <th>Title</th>
             <th>TotalQuantity</th>
             <th>Price</th>
             <th>Discount</th>
             <th>Category</th>
             <th>FinalPrice</th>
         </tr>
     </thead>
     <tbody>
         @if(Model.ProductViewsDTO.Count() > 0)
        {
            @foreach (var item in Model.ProductViewsDTO)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.TotalQuantity</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        @foreach(var discount in item.DiscountViews)
                        { 
                            <span>@discount.Name = @discount.DiscountPercent %,</span>
                            <br />
                        }
                    </td>
                    <td>
                        @foreach(var name in item.CategoryNames)
                        { 
                            <span>@name,</span>
                            <br />
                        }
                    </td>
                    <td>
                        @item.FinalPrice.ToString("c")
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Admin" 
                                asp-action="ProductDetails" 
                                asp-route-itemId="@item.Id">
                            Details
                        </a>
                        <a class="btn btn-warning btn-sm" 
                                asp-controller="Admin"
                                asp-action="EditProduct"
                                asp-route-itemId="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm"
                                asp-controller="Admin"
                                asp-action="DeleteProduct"
                                asp-route-itemId="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Products</td>
            </tr>
        }
    </tbody>
</table>
<div class="btn-group pull-right m-1">
    @for(int index = 1; index < @Model.PaginationInfo.TotalPages; index++)
    {
        <a class="btn btn-primary" value="@index" asp-controller="Admin" asp-action="Index" asp-route-currentPageNumber = "@index">@index</a>
    }
</div>