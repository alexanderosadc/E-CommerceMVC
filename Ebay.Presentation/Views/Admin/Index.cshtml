@using Ebay.Infrastructure.ViewModels.Admin.Index
@model IEnumerable<ProductViewModel>

@{
}
<table class="table table-sm table-striped table-bordered">
     <thead>
         <tr>
             <th>ID</th>
             <th>Title</th>
             <th>TotalQuantity</th>
             <th>Price</th>
             <th>Category</th>
             <th>Discount</th>
             <th>FinalPrice</th>
         </tr>
     </thead>
     <tbody>
         @if(Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.TotalQuantity</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Admin" 
                                asp-action="Details" 
                                asp-route-announcementId="@item.Id">
                            Details
                        </a>
                        <a class="btn btn-info btn-sm" 
                                asp-controller="Admin"
                                asp-action="Edit"
                                asp-route-announcementId="@item.Id">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Products</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Admin"  asp-action="CreateProduct">Create</a>
