@using Ebay.Infrastructure.ViewModels.Admin.Index
@model ProductViewDTO

<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>@Model.TotalQuantity</td>
        </tr>
        <tr>
            <th>Categories of Products</th>
            <td>
                @foreach(var name in @Model.CategoryNames)
                { 
                    <span>@name,</span>
                    <br />
                }
           </td>
        </tr>
        <tr>
            <th>Discounts Applied</th>
            <td>
                @foreach(var discount in @Model.DiscountViews)
                { 
                    <span>@discount.Name = @discount.DiscountPercent %,</span>
                    <br />
                }
           </td>
        </tr>
        <tr>
            <th>Photos</th>
            <td>
                <div class="row">
                @foreach(var photo in @Model.Photos)
                {
                      <div class="col-lg-4">
                        <div class="card">
                          <img
                            src="data:image/png;base64,@Convert.ToBase64String(photo.BinaryData)"
                            class="card-img-top"
                            alt="Waterfall"
                          />
                          <div class="card-body">
                            <h5 class="card-title">@photo.Name</h5>
                            @*<p class="card-text">
                              Some quick example text to build on the card title and make up the bulk
                              of the card's content.
                            </p>
                            <a href="#!" class="btn btn-primary">Button</a>*@
                          </div>
                        </div>
                      </div>
                }
                </div>
           </td>
        </tr>
        <tr>
            <th>Initial Price</th>
            <td>@Model.Price.ToString("C")</td>
        </tr>
        <tr>
            <th>Price with Discounts</th>
            <td>@Model.FinalPrice.ToString("C")</td>
        </tr>
    </tbody>
</table>
<a class="btn btn-warning" 
        asp-controller="Admin"
        asp-action="EditProduct"
        asp-route-itemId=@Model.Id>
        Edit
</a>
<a class="btn btn-secondary" 
        asp-controller="Admin"
        asp-action="Index">
        Back
</a>