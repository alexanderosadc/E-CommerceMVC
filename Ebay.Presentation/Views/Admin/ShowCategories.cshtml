@using Ebay.Infrastructure.ViewModels.Admin
@model IEnumerable<CategoryViewDTO>

@{
}
<table class="table table-sm table-striped table-bordered">
     <thead>
         <tr>
             <th>ID</th>
             <th>Title</th>
             <th>Description</th>
             <th>Parent Category</th>
             <th>Child Categories</th>
         </tr>
     </thead>
     <tbody>
         @if(Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.ParentName</td>
                    <td>
                        @foreach(var childName in item.ChildCategories)
                        { 
                            <span>@childName,</span>
                            <br />
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" 
                                asp-controller="Admin"
                                asp-action="EditCategory"
                                asp-route-itemId="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm"
                                asp-controller="Admin"
                                asp-action="DeleteCategory"
                                asp-route-itemId="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Products</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Admin"  asp-action="CreateCategory">Create</a>