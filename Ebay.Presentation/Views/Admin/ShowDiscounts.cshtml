@using Ebay.Infrastructure.ViewModels.Admin.Index

@model IEnumerable<DiscountViewDTO>

@{
}
<table class="table table-sm table-striped table-bordered">
     <thead>
         <tr>
             <th>ID</th>
             <th>Title</th>
             <th>Percentage</th>
             <th>Start Date</th>
             <th>End Date</th>
         </tr>
     </thead>
     <tbody>
         @if(Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DiscountPercent</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>

                    <td>
                        <a class="btn btn-warning btn-sm" 
                                asp-controller="Admin"
                                asp-action="EditDiscount"
                                asp-route-itemId="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm"
                                asp-controller="Admin"
                                asp-action="DeleteDiscount"
                                asp-route-itemId="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Products</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Admin"  asp-action="CreateDiscount">Create</a>