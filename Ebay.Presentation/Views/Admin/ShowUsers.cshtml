@using Ebay.Infrastructure.ViewModels.Admin.Users
@model IEnumerable<AppUserViewDTO>

@{
}
<table class="table table-sm table-striped table-bordered">
     <thead>
         <tr>
             <th>Username</th>
             <th>Email</th>
             <th>Roles</th>
         </tr>
     </thead>
     <tbody>
         @if(Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>
                    @foreach(var role in item.UserRoles)
                    {
                        <span>@role, </span>
                        <br />
                    }
                    </td>
                    

                    <td>
                        <a class="btn btn-warning btn-sm" 
                                asp-controller="Admin"
                                asp-action="EditUser"
                                asp-route-itemId="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm"
                                asp-controller="Admin"
                                asp-action="DeleteUser"
                                asp-route-itemId="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Products</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Admin"  asp-action="CreateUser">Create</a>